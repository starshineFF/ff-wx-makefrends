.outPut{
  background:#edeef0;
  font-size:28rpx;
}
.container-search{
  display:flex;
  width:100%;
  height:90rpx;
  align-items:center;
  margin-top:17rpx;
}
.container-search .item-ipt{
  width:570rpx;
  height:56rpx;
  background: #fff;
  margin:0 20rpx 0 30rpx;
  border:1rpx solid #fff; 
  box-sizing: border-box;
  border-radius: 3rpx;
}
.container-search .item-search{
  width:100rpx;
  height:56rpx;
  background: #4f99f8;
  border-radius: 3rpx;
}
.container-search .item-search image{
  width:33rpx;
  height:33rpx;
  margin:12rpx 34rpx 12rpx 33rpx;
}
.container-title{
  display:flex;
  justify-content: center; 
  background:#fff;
  border-bottom: 1rpx solid #ddd;
}
 .item-title{
  display: flex;
  justify-content: center;
  width:375rpx;
  height:88rpx;
  font-size:30rpx;
  line-height: 88rpx;
}
.item-title .item-txt{
  width:120rpx;
  height:88rpx;
  text-align: center;
  border-bottom: 3rpx solid #4f99f8;
}
.item-title .border-bottom{
  border-bottom:none;
}
.container-ctn{
  display:flex;
  justify-content: center;
  background: #fff;
} 
.container-ctn .item-pic image{
  width:90rpx;
  height:90rpx;
  border-radius: 50%;
  margin:30rpx 20rpx 0 30rpx;
}
.container-ctn .item-ctn{
  margin-right: 20rpx;
}
.container-ctn .item-ctn .item-ctn-nc{
  margin:38rpx 0 20rpx 0;
  color:#4f99f8;
  font-size:30rpx;
  font-weight: bold;
}
.container-ctn .item-ctn .item-ctn-date{
  font-size:24rpx;
  color:#a8a8a8;
}
.container-ctn .item-ctn .item-ctn-txt{
  line-height: 42rpx;
  color:#666666;
  text-align:justify;
  margin:23rpx 0 20rpx 0;
}
.container-cmt {
  display: flex;
  justify-content: flex-end;
  background: #fff;
  margin-bottom:20rpx;
}
.container-cmt .item-cmt-1 {
  margin:9rpx 40rpx 28rpx 9rpx; 
}
.container-cmt .item-cmt-2 {
  margin:9rpx 30rpx 28rpx 10rpx; 
}
.container-cmt .item-img image{
  width:30rpx;
  height:30rpx;
  margin-top:9rpx;
}
